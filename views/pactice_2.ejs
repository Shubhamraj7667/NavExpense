  <script>
    $(document).ready(function(){

        $(".id_del").click(function(e){
            e.preventDefault();
            var iddel = $(this).data("id");
            $.ajax({
                type: "post",
                url: "/practice_del_2",
                data: {id: iddel},
                success: function (response) {
                    console.log(response.url);

                    if(response.data == 400){
                        console.log(response.url);
                        setTimeout(()=>{
                  window.location.replace(response.url);
                },200)
                window.location.reload();
                    }else{
                        // console.log(err);
                    }
                    
                }
            });
        })


        $(".id_edit").click(function(e){
            e.preventDefault();

            var editid = $(this).data("id");
            $.ajax({
                type: "get",
                url: "/edit_practice_id",
                data: {id:editid},
                success: function (response) {
                    var data = response.data[0];

                    $("#edit_id").val(data.id);
                    $("#edit_name").val(data.name);
                    $("#edit_username").val(data.user_name);
                    $("#edit_email").val(data.email);
                    $("#edit_password").val(data.password);
                    
                }
            });
        })

        $("#update_info").submit(function(e){
            e.preventDefault();

            var updatedata = $(this).serialize();
            console.log(updatedata);
            $.ajax({
                type: "post",
                url: "/update_practice_2",
                data: updatedata,
                success: function (response) {
                    console.log(response);
                    if(response.status == 500){
                        console.log("Something Went Wrong");
                    }else{
                        setTimeout(()=>{
                            window.location.replace(response.url);
                        },200)
                        console.log("updated successfully");
                    }
                    
                }
            });
        })


        





    })
  </script>
 

   
    
