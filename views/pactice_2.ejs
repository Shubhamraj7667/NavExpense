      <form id = "update_info">

      <div class="modal fade" id="update_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="row">
                <input type="hidden" id = "id_edit">
                <div class="col-md-12">
                    <div class="error-message-update">
      
                    </div>
                  </div>
                  <div class="col-md-6">
                      
                    <label for="">Name</label>
                    <input type="text" id ="edit_name"  class="form-control" name = "name">
                  </div>
                  <div class="col-md-6">
                      
                    <label for="">User Name</label>
                    <input type="text" id ="edit_username"  class="form-control" name = "username">
                  </div>
                  <input type="hidden" id ="edit_id"  class="form-control" name = "id" >
                  <div class="col-md-6">
                      
                    <label for="">Email</label>
                    <input type="text" id ="edit_email"  class="form-control" name = "email">
                  </div>
                  <div class="col-md-6">
                      
                    <label for="">Password</label>
                    <input type="text" id ="edit_password"  class="form-control" name = "password">
                  </div>

              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

    </form>




   
        
      
      



       


      

